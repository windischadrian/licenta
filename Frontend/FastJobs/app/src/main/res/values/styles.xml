<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">#32FFFFFF</item>
        <item name="backgroundTintMode">src_in</item>
    </style>

    <style name="OutlineButtonStyleGreen" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#009E00</item>
        <item name="backgroundTint">#32FFFFFF</item>
        <item name="backgroundTintMode">src_in</item>
    </style>

    <style name="OutlineButtonIconStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">#32FFFFFF</item>
        <item name="backgroundTintMode">src_in</item>
        <item name="iconTint"></item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
